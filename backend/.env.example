# ============================================
# FIREBASE AUTHENTICATION
# ============================================
FIREBASE_ENABLED=true
FIREBASE_CREDENTIALS_PATH=service-keys/serviceAccountKey.json
FIREBASE_PROJECT_ID=your_firebase_project_id

# ============================================
# PRIMARY LLM: GOOGLE GEMINI
# ============================================
GOOGLE_API_KEY=your_gemini_api_key

# ============================================
# FALLBACK LLM #1: GITHUB MODELS (FREE - RECOMMENDED)
# ============================================
# Generate here: https://github.com/settings/tokens?type=beta
# Permissions: "Model inference" (Read-only)
# Gets gpt-4o, llama-3.1-405b, phi-4 for free with rate limits
GITHUB_TOKEN=github_pat_your_token_here

# ============================================
# FALLBACK LLM #2: CLAUDE (Optional)
# ============================================
# Generate here: https://console.anthropic.com/account/billing/overview
ANTHROPIC_API_KEY=your_claude_api_key

# ============================================
# WEB SEARCH: TAVILY
# ============================================
TAVILY_API_KEY=your_tavily_api_key

# ============================================
# VECTOR DATABASE: PINECONE (Production)
# ============================================
USE_PINECONE=true
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1-aws

# ============================================
# VECTOR DATABASE: WEAVIATE (Alternative)
# ============================================
USE_WEAVIATE=false
WEAVIATE_URL=http://localhost:8080

# ============================================
# SERVER CONFIGURATION
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=True
FRONTEND_URL=http://localhost:3000
